# Use auto text detection
* text=auto

# Normalize line endings for text files
* text eol=lf

# Python files
*.py text

# Jupyter Notebooks
*.ipynb text eol=lf

# Markdown and config files
*.md text eol=lf
*.txt text eol=lf
*.csv text eol=lf
*.json text eol=lf
*.yaml text
*.yml text

# Shell scripts
*.sh text eol=lf
*.bat text eol=crlf

# Logs
*.log text eol=lf

# Binary files - prevent text conversion
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.pdf binary
*.h5 binary
*.hdf5 binary
*.pt binary
*.pth binary
*.ckpt binary
*.pkl binary
*.joblib binary
*.npy binary
*.npz binary
*.zip binary
*.tar.gz binary